{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:vue/vue3-essential", "airbnb", "plugin:prettier/recommended"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".ts", ".vue", ".json"],
        "map": [
          ["@comp", "./src/components/"],
          ["@style", "./src/styles/"],
          ["@layout", "./src/layouts/"],
          ["@util", "./src/utils/"],
          ["@type", "./src/types/"],
          ["@api", "./src/apis/"],
          ["@cos", "./src/composes/"],
          ["@store", "./src/stores/"],
          ["@", "./src"]
        ]
      }
    }
  },
  "plugins": ["vue", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": "off",
    "no-restricted-syntax": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "no-param-reassign": "off",
    "no-unused-vars": "off",
    "no-unused-expressions": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "error",
    "import/order": "off"
  }
}
